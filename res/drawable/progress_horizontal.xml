<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/progressbar_radius" />

            <gradient
                android:centerColor="@color/progress_bar_back"
                android:endColor="@color/progress_bar_back"
                android:startColor="@color/progress_bar_back" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="@dimen/progressbar_radius" />

                <gradient
                    android:centerColor="@color/progress_bar_back"
                    android:endColor="@color/progress_bar_back"
                    android:startColor="@color/progress_bar_back" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="@dimen/progressbar_radius" />

                <gradient
                    android:centerColor="@color/progress_bar_fore"
                    android:endColor="@color/progress_bar_fore"
                    android:startColor="@color/progress_bar_fore" />
            </shape>
        </clip>
    </item>

</layer-list>